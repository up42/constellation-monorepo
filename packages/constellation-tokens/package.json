{
  "name": "@up42/constellation-tokens",
  "version": "0.0.0",
  "author": "Bernardo Corbella <bernardo.corbella@up42.com>",
  "license": "ISC",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel theo:onchange theo",
    "build": "yarn run theo",
    "theo": "theo ./src/tokens/tokens.json --transform web --format map.scss,scss,raw.json,json --dest ./dist/tokens",
    "theo:onchange": "onchange \"./src/tokens/*.json\" -- npm run theo"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "theo": "^8.1.4"
  }
}
